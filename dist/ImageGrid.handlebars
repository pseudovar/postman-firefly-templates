{{#*inline "button"}}
<a
    href='https://developer.adobe.com/firefly-services/docs/firefly-api/'
    class='ml-3 inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600'
>API Docs</a>
{{/inline}}
{{#*inline "h1"}}
<h1
    class='bg-gradient-to-br from-[#fa0f00] via-[#dd680b] to-[#dccc3a] inline-block text-transparent bg-clip-text font-black text-5xl'
>{{title}}</h1>
{{/inline}}
{{#*inline "header"}}
<div class="flex items-center justify-between mb-8">
  <div class="min-w-0 flex-1">
     {{> h1 title="Firefly API Results"}}
  </div>
  <div class="mt-4 flex md:ml-4 md:mt-0">
    {{> button link="https://developer.adobe.com/firefly-services/docs/firefly-api/" title="API Docs"}}
  </div>
</div>
{{/inline}}
{{#*inline "tailwind"}}
<script src='https://cdn.tailwindcss.com'></script>
{{/inline}}
{{>tailwind}}
<div class="px-8">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl">

        {{>header title="Firefly API Results"}}

        <div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 mb-8">
        {{#each outputs}}
            <div class="relative flex flex-col overflow-hidden rounded-lg bg-white">
                <div class="aspect-h-4 aspect-w-3 bg-gray-200 sm:aspect-none">
                    <img src="{{image.presignedUrl}}">
                </div>
                <div class="flex flex-1 flex-col space-y-2 p-4">
                    <h3 class="text-sm font-medium text-gray-900 text-center">Seed: {{seed}}</h3>
                </div>  
            </div>
        {{/each}}
        </div>
    </div>
</div>