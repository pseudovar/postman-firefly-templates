{{>tailwind}}
{{>header title="Firefly API Results"}}

<div class="grid grid-cols-1 gap-y-4 sm:grid-cols-2 sm:gap-x-6 sm:gap-y-10 lg:grid-cols-3 lg:gap-x-8 mb-8">
{{#each outputs}}
    <div class="group relative flex flex-col overflow-hidden rounded-lg bg-white">
        <div class="aspect-h-4 aspect-w-3 bg-gray-200 sm:aspect-none group-hover:opacity-75">
            <img src="{{image.presignedUrl}}">
        </div>
        <div class="flex flex-1 flex-col space-y-2 p-4">
            <h3 class="text-sm font-medium text-gray-900 text-center">Seed: {{seed}}</h3>
        </div>  
    </div>
{{/each}}
</div>